<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_second"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="stop refresh" />

        <Button
            android:id="@+id/btn_second1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="stop loadmore" />
    </LinearLayout>

    <refresh.renyi.io.supperrefreshview.customview.SuperRefreshView
        android:id="@+id/sr_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <refresh.renyi.io.supperrefreshview.customview.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#123456"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#543222"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#323232"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#00ff00"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#ffff00"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#123456"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#882288"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#7733dd"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="30dp" />


            </LinearLayout>


        </refresh.renyi.io.supperrefreshview.customview.CustomScrollView>
    </refresh.renyi.io.supperrefreshview.customview.SuperRefreshView>


</LinearLayout>